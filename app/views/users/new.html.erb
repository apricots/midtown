<div class = 'well'>
  <%= form_for @user do |f| %>
  <div class = 'control-group'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>  
  <div class = 'control-group'>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <%= f.submit class: 'btn btn-custom' %>
  <% end %>
</div>